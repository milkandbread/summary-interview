void shakersort(int number[]) { 
    int i, left = 0, right = MAX - 1, shift = 0; 

    while(left < right) { 
        // å‘å³é€²è¡Œæ°£æ³¡æ’åº 
        for(i = left; i < right; i++) { 
            if(number[i] > number[i+1]) { 
                SWAP(number[i], number[i+1]); 
                shift = i; 
            } 
        } 
        right = shift; 

        printf("\nå¾€å³æ’åºï¼š"); 
        for(i = 0; i < MAX; i++) 
            printf("%d ", number[i]); 

        // å‘å·¦é€²è¡Œæ°£æ³¡æ’åº 
        for(i = right; i > left; i--) { 
            if(number[i] < number[i-1]) { 
                SWAP(number[i], number[i-1]); 
                shift = i; 
            } 
        } 
        left = shift; 

        printf("\nå‘å·¦æ’åºï¼š"); 
        for(i = 0; i < MAX; i++) 
            printf("%d ", number[i]); 
    } 
} 


